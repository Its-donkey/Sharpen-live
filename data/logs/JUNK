{
    order mirror before reverse_proxy
}

:8880 {
    mirror {
        # optional: only mirror some traffic (100% by default)
        mirror_rate 100%

        # primary endpoint -> your alert server on its new port
        primary {
            reverse_proxy 127.0.0.1:18880
        }

        # secondary endpoint -> wherever you want the duplicate traffic
        secondary {
            reverse_proxy 127.0.0.1:9090
        }

        # extras if you want: metrics shadow, compare_status, compare_body, etc.
    }
}