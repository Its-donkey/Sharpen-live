{{define "admin"}}
{{template "base" .}}
{{end}}

{{define "content"}}
<section class="surface admin-panel">
  <h2>Admin unavailable</h2>
  <p>The admin console is disabled while the catch-all site is active. Fix the configuration errors to restore the intended site.</p>
  {{if .FallbackErrors}}
    <div class="status-block">
      <h3>Fallback issues</h3>
      <ul>
        {{range .FallbackErrors}}<li>{{.}}</li>{{end}}
      </ul>
    </div>
  {{end}}
</section>
{{end}}
