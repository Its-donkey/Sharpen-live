{{define "streamer"}}
{{template "base" .}}
{{end}}

{{define "content"}}
<main class="surface" aria-labelledby="streamer-name">
  <section class="intro">
    <h2 id="streamer-name">{{.Streamer.Name}}</h2>
    <p>
      <span class="status {{statusClass .Streamer.Status}}">{{statusLabel .Streamer.Status .Streamer.StatusLabel}}</span>
      {{if .Streamer.Description}}
        <span class="streamer-description">{{.Streamer.Description}}</span>
      {{end}}
    </p>
  </section>

  <section class="streamer-table" aria-label="Streamer detail">
    <div class="platform-rows">
      <div class="platform-row">
        <div class="form-field">
          <span>Streaming Platforms</span>
          {{if .Streamer.Platforms}}
            <ul class="platform-list">
              {{range .Streamer.Platforms}}
                <li>
                  {{if .ChannelURL}}
                    <a class="platform-link" href="{{.ChannelURL}}" target="_blank" rel="noopener noreferrer">{{.Name}}</a>
                  {{else}}
                    <span class="platform-link" aria-disabled="true">{{.Name}}</span>
                  {{end}}
                </li>
              {{end}}
            </ul>
          {{else}}<div class="language-empty">No platforms listed.</div>{{end}}
        </div>
      </div>

      <div class="platform-row">
        <div class="form-field">
          <span>Languages</span>
          <div class="language-tags">
            {{if .Streamer.Languages}}
              {{range .Streamer.Languages}}
                <span class="language-pill">{{.}}</span>
              {{end}}
            {{else}}
              <span class="language-empty">Language not specified.</span>
            {{end}}
          </div>
        </div>
      </div>
    </div>
  </section>

  <div class="submit-streamer-actions">
    <a class="submit-streamer-cancel" href="/">‚Üê Back to roster</a>
    <a class="submit-streamer-submit" href="/#submit">Submit a streamer</a>
  </div>
</main>
{{end}}
